pipeline {
    agent any

    stages {
        stage('checkout') {
            steps {
               git branch: 'main', credentialsId: 'krish', url: 'https://github.com/krishnarju/Testapp-1.git'
            }
        }
        stage('build') {
            steps {
               sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('	scan') {
                    parallel {
                        stage('Docker Build') {
    	agent any
      steps {
      	sh 'docker build -t test/spring-petclinic:latest .'
      }
    }
                               
        }
    
}
} 
        } // End of Sonar Scan
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
